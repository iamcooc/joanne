
<div class="row <%= render_offset index%> ">
  <div class="popover <%= right_or_left index%> in " style="display: block;">
    <div class="arrow"></div>
    <div class="popover-title"><h3><%= comment.name %> 說：</h3></div>
    <div class="popover-content">
       <h4 class="lead"><%= simple_format comment.message %></h4>
      <div class="pull-right"><%= time_ago_in_words(comment.created_at) %> ago.</div>
    </div>
  </div>
</div>  
